<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.gvsig</groupId>
	<artifactId>libUIComponent</artifactId>
	<packaging>jar</packaging>
	<version>2.0-SNAPSHOT</version>
	<name>libUIComponent</name>
	<parent>
		<groupId>org.gvsig</groupId>
		<artifactId>gvSIGCE</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<properties>
		<lib>${repo-root}/libraries/libUIComponent/lib</lib>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.gvsig</groupId>
			<artifactId>libExceptions</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.gvsig</groupId>
			<artifactId>libInternationalization</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.gvsig</groupId>
			<artifactId>libTools</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.5.5</version>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>jcalendar</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${lib}/jcalendar.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>jfreechart-1.0.6</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${lib}/jfreechart-1.0.6.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>jcommon-1.0.10</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${lib}/jcommon-1.0.10.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>JWizardComponent</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${lib}/JWizardComponent.jar</systemPath>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>src-test-ui</testSourceDirectory>
		<outputDirectory>bin</outputDirectory>
		<testOutputDirectory>bin-test</testOutputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.gif</include>
					<include>**/*.png</include>
					<include>**/*.PNG</include>
					<include> **/*.bmp</include>
					<include> **/*.jpg</include>
					<include> **/*.jpeg</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>
