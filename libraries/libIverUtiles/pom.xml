<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.gvsig</groupId>
	<artifactId>libIverUtiles</artifactId>
	<packaging>jar</packaging>
	<version>2.0-SNAPSHOT</version>
	<name>libIverUtiles</name>
	<url>http://gvsig.org</url>
	<parent>
		<groupId>org.gvsig</groupId>
		<artifactId>gvSIGCE</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>mysql-connector-java-3.1.7-bin</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/libraries/libFMap/lib/mysql-connector-java-3.1.7-bin.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>postgis-jdbc-driver</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/libraries/libFMap/lib/postgis-jdbc-driver.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>postgresql-74.213</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/libraries/libFMap/lib/postgresql-74.213.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>commons-collections-3.1</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/frameworks/_fwAndami/lib/commons-collections-3.1.zip</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>commons-dbcp-1.0-dev-20020806</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/frameworks/_fwAndami/lib/commons-dbcp-1.0-dev-20020806.zip</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>commons-pool-1.2</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/frameworks/_fwAndami/lib/commons-pool-1.2.zip</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>castor-0.9.5.3-xml</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/frameworks/_fwAndami/lib/castor-0.9.5.3-xml.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gvsig-legacy</groupId>
			<artifactId>andami</artifactId>
			<version>gvsig</version>
			<scope>system</scope>
			<systemPath>${repo-root}/frameworks/_fwAndami/andami.jar</systemPath>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>src-test</testSourceDirectory>
		<outputDirectory>bin</outputDirectory>
		<testOutputDirectory>bin-test</testOutputDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<includes>
					<include>**/*.gif</include>
					<include>**/*.png</include>
					<include>**/*.PNG</include>
					<include> **/*.bmp</include>
					<include> **/*.jpg</include>
					<include> **/*.jpeg</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>