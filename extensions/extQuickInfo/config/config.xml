<?xml version="1.0" encoding="ISO-8859-1"?>
<plugin-config>
	<libraries library-dir="."/>
	<depends plugin-name="com.iver.cit.gvsig"/>
	<depends plugin-name="com.iver.cit.gvsig.cad"/>
	<depends plugin-name="com.iver.core"/>
	<resourceBundle name="text"/>
	<extensions>
		<extension class-name="org.gvsig.quickInfo.AboutQuickInfoExtension"
                description="Extension Quick Info Tool of the Consejería de Medio Ambiente of the Junta de Castilla y León Project."
                active="true"
                priority="1">
		</extension>
		<extension class-name="org.gvsig.quickInfo.QuickInfoToolExtension"
			description="Displays the selected information about the feature pointed out by the cursor."
			active="true"
			priority="30">
			<menu text="Vista/consulta/quick_information"
				action-command="QINFO"
			    tooltip="quick_information"
				icon="images/view-quick-info-icon.png"
				position="21"/>
			<tool-bar name="View_Tools_Query" position="5">
				<action-tool icon="images/view-quick-info-icon.png" action-command="QINFO" enable-text="quick_information" tooltip="quick_information" position="2"/>
			</tool-bar>
		</extension>
	</extensions>
</plugin-config>
